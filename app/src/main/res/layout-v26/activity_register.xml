<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/mainActivityTitleCard"
                    android:layout_width="261dp"
                    android:layout_height="117dp">

                    <TextView
                        android:id="@+id/TitleofPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="53dp"
                        android:text="@string/user_key_text_main"
                        android:textAlignment="gravity" />

                    <TextView
                        android:id="@+id/UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="26dp"
                        android:text="@string/user_full_name_text_main"
                        android:textAlignment="gravity" />

                    <TextView
                        android:id="@+id/TitleTextView"
                        android:layout_width="261dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="88dp"
                        android:text="@string/RegisterScreenCardViewText"
                        android:textAlignment="center" />

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FirstNameInputRegister"
                    android:layout_width="127dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/firstNameRegister"
                    android:inputType="textPersonName"
                    android:text="@string/firstNameRegister" />

                <EditText
                    android:id="@+id/LastNameInputRegister"
                    android:layout_width="213dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/LastNameRegisterInput"
                    android:inputType="textPersonName"
                    android:text="@string/LastNameRegisterInput" />

            </LinearLayout>

            <EditText
                android:id="@+id/EmailRegisterInput"
                android:layout_width="340dp"
                android:layout_height="40dp"

                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/EmailInputRegister"
                android:inputType="textEmailAddress"
                android:text="@string/EmailInputRegister" />

            <EditText
                android:id="@+id/PhoneInputRegister"
                android:layout_width="232dp"
                android:layout_height="40dp"

                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/PhoneInputRegister"
                android:inputType="phone"
                android:text="@string/PhoneInputRegister" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/RegisterButton"
                    android:layout_width="225dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/registerButton" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

                <Button
                    android:id="@+id/RegisterBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/back_button_text" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>