<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivitySeeWhatsNewFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="johnschroeders.marketfree.SeeWhatsNewFragment">

    <Button
        android:id="@+id/mainActivitySeeNewOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:scrollHorizontally="false"
        android:text="@string/new_orders_buttonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivitySeeNewProducts"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/new_orders_buttonText" />

    <Button
        android:id="@+id/mainActivitySeeNewProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:scrollHorizontally="false"
        android:text="@string/new_productsButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivitySeeNewSubscribers"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivitySeeNewOrders"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivitySeeNewSubscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:scrollHorizontally="false"
        android:text="@string/new_subscribersButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivitySeeNewMessages"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivitySeeNewProducts"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivitySeeNewMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:scrollHorizontally="false"
        android:text="@string/new_messagesButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivitySeeNewSubscribers"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
